<h1> Olvidaste tu contraseña? </h1>

<%= form_with url: password_reset_path do |form| %>

    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "steve@gmail.com" %>
    </div>

    

    <div class="mb-3">
        <%= form.submit "Restablecer contraseña", class: "btn btn-primary" %>


    </div
<% end %>
